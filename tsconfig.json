{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "src/*": ["src/*"],
        "types/*": ["types/*"],
        "@/*": ["./*"]
      },
      "incremental": true,
      "tsBuildInfoFile": "./.buildcache/api.tsbuildinfo",
      "module": "ES2020",
      "esModuleInterop": true,
      "target": "ES2020",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "skipLibCheck": true
    },
    "typeRoots": ["./types"],
    "include": [
      "src/**/*",
      "types/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }